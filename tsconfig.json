{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2021",
    "module": "ES2020",       
    "lib": ["DOM"],
    "allowJs": true,
		"noEmit": true,
    /* Module Resolution Options */
    "moduleResolution": "Node",
		"esModuleInterop": true,
    /* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true                /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*"]
}
